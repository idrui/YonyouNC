	public MaterialVO insertMaterial(Cgag000001HVO srchvo, String pk_group,
			String pk_org) throws BusinessException {
		HYPubBO bo = new HYPubBO();
		IMaterialBaseInfoService maservice = NCLocator.getInstance().lookup(
