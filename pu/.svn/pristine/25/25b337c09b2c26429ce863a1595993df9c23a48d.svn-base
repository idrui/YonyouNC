package nc.vo.pu.pub.util;

import java.util.List;

public class ListUtil {

  /**
   * List是否为空。
   * <p>
   * <b>使用示例:</b>
   * <p>
   * <b>参数说明</b>
   * 
   * @param list
   * @return <p>
   * @author wangyf
   * @time 2010-3-15 上午11:49:20
   */
  public static <E> boolean isEmpty(List<E> list) {
    return list == null || list.size() == 0;
  }

}
